@model Service
@{
    ViewData["Title"] = "Create";
    ViewData["Main"] = "Services";
}
<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Main"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">@ViewData["Title"]</li>
    </ol>
    <div class="row">
        <form method="post" asp-action="Create">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name">
                <small><span asp-validation-for="Name" class="form-text text-danger"></span></small>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                <small><span asp-validation-for="Description" class="form-text text-danger"></span></small>
            </div>
            <input type="hidden" asp-for="CreatedDateOnUtc" value="@DateTime.UtcNow" />
            <input type="hidden" asp-for="UpdatedDateOnUtc" value="@DateTime.UtcNow" />
            <div class="form-group d-flex justify-content-start mt-3">
                <button type="submit" class="btn btn-primary" style="margin-right:10px">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

</div>